{
  "functions": {
    "api/index.php": {
      "runtime": "now-php@0.0.10"
    }
  },
  "routes": [
    {
      "src": "/gh/(?<id>[^/]*)",
      "dest": "/api/?u=$id&p=github"
    },
    {
      "src": "/gl/(?<id>[^/]*)",
      "dest": "/api/?u=$id&p=gitlab"
    },
    {
      "src": "/gv/(?<id>[^/]*)",
      "dest": "/api/?u=$id&p=gravatar"
    }
  ]
}
